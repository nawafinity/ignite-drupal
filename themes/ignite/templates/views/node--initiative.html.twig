<section class="ige-section my-px-30">
  <div class="ige-section-content">
    <div class="container-xl">
      <div class="row">
        <div class="col-12 col-lg-8">
          <div class="card">
            <div class="card-body">
              <h2 class="card-title d-flex">{{ node.label }}</h2>

              {{ node.fields.field_initiatives_details.value|raw }}

            </div>
          </div>
        </div>
