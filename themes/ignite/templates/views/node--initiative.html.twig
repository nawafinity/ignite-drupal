                  <span>{{ "Registration criteria"|t }}</span>
                </h5>

                <div class="mt-3">
                  {{ node.fields.field_registration_criteria.value|raw }}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {% if node.field_registration_form %}
        <div class="my-px-30">
          {% set label_hidden = "yes" %}
          {{ node.field_registration_form|view|without('label_hidden') }}
        </div>
      {% endif %}
    </div>
  </div>
