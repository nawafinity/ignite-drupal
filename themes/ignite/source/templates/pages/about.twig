{% extends "../layouts/_base.twig" %}
{% set navbar_classes = "navbar-light bg-white" %}
{% set is_home = false %}
{% set current = "about" %}

{% block content %}
    <div class="mx-0 my-px-35 mx-md-5">
        {% include "../partials/_about.twig" %}
    </div>

    {% include "../partials/_statistics.twig" %}


    {# Paths #}
    <section class="ige-section my-px-60">
        <div class="container-xl">
            <div class="ige-section-title">
                <h2>Ignite Paths</h2>
            </div>

            <div class="ige-section-description">
                <div id="paths">
                    <div class="ige-about-collapse">
                        {% for key,category in categories %}
                            <button class="btn btn-link ige-about-collapse__item" data-bs-toggle="collapse"
                                    data-bs-target="#path-{{ key }}"
                                    aria-expanded="{% if key == 0 %}true{% else %}false{% endif %}"
                                    aria-controls="path-{{ key }}">
                                <svg data-src="{{ assets }}/images/icons/{{ category.img }}.svg" fill="currentColor"
                                     class="icon-35 me-2"/>
                                <span>{{ category.title }}</span>
                            </button>
                        {% endfor %}
                    </div>

                    <div class="mt-3">
                        {% for key,category in categories %}
                            <div class="ige-about-paths__content collapse {% if key == 0 %}show{% endif %}"
                                 id="path-{{ key }}"
                                 data-bs-parent="#paths">
                                malesuada fames ac turpis egestas sed tempus urna et pharetra pharetra massa massa
                                ultricies mi quis hendrerit dolor magna eget.
                            </div>
                        {% endfor %}
                    </div>

                </div>
            </div>

        </div>
    </section>

    {# Types #}
    <section class="ige-section my-px-60">
        <div class="container-xl">
            <div class="ige-section-title">
                <h2>Initiatives Types</h2>
            </div>

            <div class="ige-section-description">
                <div id="initstypes">
                    <div class="ige-about-collapse">
                        {% for key,item in initiativesTypes %}
                            <button class="btn btn-link ige-about-collapse__item" data-bs-toggle="collapse"
                                    data-bs-target="#initype-{{ key }}"
                                    aria-expanded="{% if key == 0 %}true{% else %}false{% endif %}"
                                    aria-controls="path-{{ key }}">
                                <svg data-src="{{ assets }}/images/icons/{{ item.icon }}.svg" fill="currentColor"
                                     class="icon-35 me-2"/>
                                <span>{{ item.name }}</span>
                            </button>
                        {% endfor %}
                    </div>

                    <div class="mt-3">
                        {% for key,item in initiativesTypes %}
                            <div class="ige-about-paths__content collapse {% if key == 0 %}show{% endif %}"
                                 id="initype-{{ key }}"
                                 data-bs-parent="#initstypes">
                                malesuada fames ac turpis egestas sed tempus urna et pharetra pharetra massa massa
                                ultricies mi quis hendrerit dolor magna eget.
                            </div>
                        {% endfor %}
                    </div>

                </div>
            </div>

        </div>
    </section>

    {# Explnation #}
    <section class="ige-section my-px-35">
        <div class="container-xl">
            <div class="ige-about-exp">
                <div class="row">
                    {% for ignite in ignites %}
                        <div class="col-12 col-lg-2 ige-about-exp__item">
                            <div class="ige-about-exp__icon">
                                <span>{{ ignite.letter }}</span>
                            </div>
                            <div class="ige-about-exp__title">
                                <h4>{{ ignite.title }}</h4>
                            </div>
                            <div class="ige-about-exp__description">
                                <p>{{ ignite.desc }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    {# Members #}
    <section class="ige-section my-px-120">
        <div class="container-xl">
            <div class="ige-section-title ige-section-title--under">
                <h2>Digital Content Council Members</h2>
            </div>

            <div class="ige-section-content">
                <div class="ige-about-members">
                    <div class="row g-3">
                        {% for i in 1..10 %}
                            <div class="{% if i == 1 %}col-12{% else %}col-md-6{% endif %}">
                                <div class="ige-about-members__item">
                                    <div class="card ige-about-member">
                                        <div class="d-flex flex-row">
                                            <div class="ige-about-member__photo">
                                                <img src="{{ assets }}/images/members/swaha.png"
                                                     class="img-fluid rounded-start" alt="{{ i }}">
                                            </div>
                                            <div class="card-body">
                                                <span class="ige-about-member__title">Mr. Dr. Ms.</span>
                                                <h5 class="ige-about-member__name card-title">Dear name</h5>
                                                <p class="card-text">extra-info</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}