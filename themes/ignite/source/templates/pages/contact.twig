{% extends "../layouts/_base.twig" %}
{% set navbar_classes = "navbar-light bg-white" %}
{% set is_home = false %}
{% set current = "contact" %}

{% block content %}
    <div class="ige-contact">
        <section class="ige-section my-px-60">
            <div class="container-xl">
                <div class="ige-section-title">
                    <h2 class="text-primary">Contact Us</h2>

                    <div class="my-px-25">
                        <h4>Social Media</h4>
                        <div class="ige-contact-social list-inline">
                            <div class="list-inline-item">
                                <a href="#">
                                    <box-icon type="logo" name="linkedin-square" color="currentColor"></box-icon>
                                </a>
                            </div>
                            <div class="list-inline-item">
                                <a href="#">
                                    <box-icon type="logo" name="instagram-alt" color="currentColor"></box-icon>
                                </a>
                            </div>
                            <div class="list-inline-item">
                                <a href="#">
                                    <box-icon type="logo" name="twitter" color="currentColor"></box-icon>
                                </a>
                            </div>
                            <div class="list-inline-item">
                                <a href="#">
                                    <box-icon type="logo" name="youtube" color="currentColor"></box-icon>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="my-px-25">
                        <h4 class="text-primary">Email Address</h4>
                        <p class="text-primary">ignite@ignite.gov.sa</p>
                    </div>
                </div>

                <div class="ige-section-description">
                    <h3 class="text-primary">Contact Form</h3>
                    <div class="mt-4">
                        <form method="post">
                            <div>
                                <label for="email" class="form-label">Email Address</label>
                                <input type="text" class="form-control" id="email"/>
                            </div>
                            <div class="mt-3">
                                <label for="full_name" class="form-label">Full name</label>
                                <input type="text" class="form-control" id="full_name"/>
                            </div>
                            <div class="mt-3">
                                <label for="city" class="form-label">City</label>
                                <select id="city" class="form-select">
                                    <option disabled>Please Choose...</option>
                                </select>
                            </div>
                            <div class="mt-3">
                                <label for="reason" class="form-label">City</label>
                                <textarea type="text" class="form-control" id="reason"></textarea>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary rounded-1">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}