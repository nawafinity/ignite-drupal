<section class="ige-sponsors">
    <div data-ige-sliders="#sponsorsConfig">
        {% for sponsor in sponsors %}
            <div class="ige-sponsors-item">
                <div class="inner">
                    <img src="{{ assets }}/images/sponsors/{{ sponsor.image }}" alt="{{ sponsor.name }}"/>
                </div>
            </div>
        {% endfor %}
    </div>

    <script type="application/json" id="sponsorsConfig">
        {
            "slidesToShow": 5,
            "slidesToScroll": 5,
            "speed": 600,
            "infinite": true,
            "autoplay": true,
            "responsive": [
                {
                    "breakpoint": 576,
                    "settings": {
                        "slidesToShow": 3,
                        "slidesToScroll": 3
                    }
                },
                {
                    "breakpoint": 768,
                    "settings": {
                        "slidesToShow": 3,
                        "slidesToScroll": 3
                    }
                },
                {
                    "breakpoint": 995,
                    "settings": {
                        "slidesToShow": 3,
                        "slidesToScroll": 3
                    }
                },
                {
                    "breakpoint": 1200,
                    "settings": {
                        "slidesToShow": 4,
                        "slidesToScroll": 4
                    }
                },
                {
                    "breakpoint": 1400,
                    "settings": {
                        "slidesToShow": 5,
                        "slidesToScroll": 5
                    }
                }
            ]
        }
    </script>
</section>